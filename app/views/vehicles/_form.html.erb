<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
         <div class="card card-primary">
            <div class="card-header">
               <h3 class="card-title"><small>Create Parking</small></h3>
            </div>
            <%= form_for(@items, url: {action: @items.new_record? ? :create : :update}, :html => {id: "vehicle-form", class: "form-horizontal"}) do |f| %>
            <% if @items.errors.any? %>
              <ul class="error_class">
              <% @items.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            <% end %>
            <div class="card-body">
               <div class="form-group">
                  <%= f.label :vehicle_number_plate, class: "col-lg-4 control-label" %>
                  <div class="col-lg-8">
                     <%= f.text_field :vehicle_number, class: "form-control", required: "required"%>
                  </div>
               </div>
               <div class="form-group">
                  <%= f.label :Spot, class: "col-lg-4 control-label" %>
                  <div class="col-lg-8">
                      
                    <%= select_tag "vehicle[spot_id]", options_for_select( @spot_type,  @spot_id), required: true, class: "form-control", include_blank: "Select Parking Type", style: 'text-transform: capitalize;' %>
                  </div>
               </div>
               <%= hidden_field 'vehicle', 'is_active' ,:value => '1' %>
               <div class="card-footer">
                  <button type="submit" class="btn btn-primary sub_btn" >Submit</button>
                  <%= link_to 'Cancel',vehicles_path , class: "btn btn-w-m btn-info" %>
               </div>
               <%end%>
            </div>
         </div>
         <div class="col-md-6">
         </div>
      </div>
    </div>
</section>